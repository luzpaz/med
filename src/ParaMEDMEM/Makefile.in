top_builddir=../..
srcdir=@srcdir@
VPATH=.:$(srcdir):$(srcdir)/tests

MACHINE=PCLINUX

@COMMENCE@


EXPORT_PYSCRIPTS = \


EXPORT_HEADERS = \
CommInterface.hxx\
MPIProcessorGroup.hxx\
ProcessorGroup.hxx\
BlockTopology.hxx\
Topology.hxx\
ParaGRID.hxx\
ParaMESH.hxx\
ParaSUPPORT.hxx\
