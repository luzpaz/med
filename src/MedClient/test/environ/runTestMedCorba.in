if test -n $MED_ROOT_DIR
then
  export PATH=$MED_ROOT_DIR/bin/salome:${PATH}
  export LD_LIBRARY_PATH=$MED_ROOT_DIR/lib@LIB_LOCATION_SUFFIX@/salome${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}
